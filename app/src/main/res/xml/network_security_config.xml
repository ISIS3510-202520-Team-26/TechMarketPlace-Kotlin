<?xml version="1.0" encoding="utf-8"?>
<network-security-config
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Allow cleartext only to your dev backends.
         You can have multiple <domain> entries inside the same <domain-config>. -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Physical device talking to your laptop/desktop over LAN -->
        <domain includeSubdomains="true">172.20.10.4</domain>

        <!-- Emulator-only alias to host loopback (keep if you sometimes use the emulator) -->
        <domain includeSubdomains="true">10.0.2.2</domain>

        <!-- If you ever use “localhost” name via a proxy, leave this -->
        <domain>localhost</domain>
    </domain-config>

</network-security-config>

